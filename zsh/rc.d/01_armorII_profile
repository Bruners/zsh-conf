# Extra exports to load after .zshenv

typeset -U EDITOR
EDITOR='/usr/bin/vim'
typeset -U PAGER
PAGER='/usr/bin/less'
typeset -U MANPAGER
MANPAGER='/usr/bin/vimmanpager'

export EDITOR PAGER MANPAGER

HISTSIZE=1000
SAVEHIST=1000
HISTFILE='~/.zhistory'

export HISTSIZE SAVEHIST HISTFILE

# Browser
export OPERAPLUGINWRAPPER_PRIORITY=0
if [ -n "$DISPLAY" ]; then
    export BROWSER='/usr/bin/opera'
else
    export BROWSER='w3m'
fi

export DE='gnome'

# gtk/qt madness
export OOO_FORCE_DESKTOP='gnome'
export GTK2_RC_FILES="${HOME}/.gtkrc-2.0"

# Force vertical sync using TwinView
export __GL_SYNC_TO_VBLANK=1
export __GL_SYNC_DISPLAY_DEVICE='DFP-0'
export __VDPAU_NVIDIA_SYNC_DISPLAY_DEVICE='DFP-0'

# Inform the JVM that your window manager does not re-parent
# May not be needed
export _JAVA_AWT_WM_NONREPARENTING=1

# Skip directories and scm in grep
export GREP_OPTIONS="--directories=skip --color=auto --exclude='.*.sw*' --exclude-dir='.git' --exclude-dir='.svn'"

# vim:set ft=zsh:
